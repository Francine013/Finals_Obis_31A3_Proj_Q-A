@model List<QABoard.Infrastructure.Entities.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                <td>
                    <!--
                        NOTE: Replaced native 'confirm' with 'confirmDelete(this)' for better
                        user experience and adherence to modern web standards,
                        which prefer custom modal/dialogs.
                    -->
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline"
                          onsubmit="return confirmDelete(this);">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
