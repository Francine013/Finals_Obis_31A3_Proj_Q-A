@* @page
@model QABoard.Web.Views.Question.IndexModel
@{
}
 *@

@model List<QABoard.Web.Models.QuestionViewModel>
@{
    ViewData["Title"] = "Questions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Questions</h2>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create" class="btn btn-primary">Ask Question</a>
    }
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        No questions yet. Be the first to ask!
    </div>
}
else
{
    <div class="list-group">
        @foreach (var question in Model)
        {
            <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">
                        <a asp-action="Details" asp-route-id="@question.Id">@question.Title</a>
                    </h5>
                    <small>@question.CreatedAt.ToString("MMM dd, yyyy")</small>
                </div>
                <p class="mb-1">@(question.Content.Length > 150 ? question.Content.Substring(0, 150) + "..." : question.Content)</p>
                <small>
                    Asked by <strong>@question.UserName</strong> |
                    @question.AnswerCount answer(s)
                </small>
            </div>
        }
    </div>
}