@model QABoard.Web.Models.QuestionViewModel
@{
    ViewData["Title"] = Model.Title;
    var answers = ViewBag.Answers as List<QABoard.Web.Models.AnswerViewModel>;
}

<div class="card mb-4">
    <div class="card-body">
        <h2>@Model.Title</h2>
        <p class="text-muted">
            Asked by <strong>@Model.UserName</strong> on @Model.CreatedAt.ToString("MMMM dd, yyyy")
        </p>
        <hr />
        <p>@Model.Content</p>

        @if (User.Identity.IsAuthenticated && (User.Identity.Name == Model.UserId || User.IsInRole("Admin")))
        {
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Edit</a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline"
                      onsubmit="return confirm('Are you sure you want to delete this question?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </div>
        }
    </div>
</div>

<h4>@answers.Count Answer(s)</h4>
<hr />

@foreach (var answer in answers)
{
    <div class="card mb-3">
        <div class="card-body">
            <p>@answer.Content</p>
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    Answered by <strong>@answer.UserName</strong> on @answer.CreatedAt.ToString("MMM dd, yyyy")
                </small>
                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Vote" asp-action="Upvote" asp-route-answerId="@answer.Id"
                              asp-route-questionId="@Model.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm @(answer.HasVoted ? "btn-success" : "btn-outline-success")">
                                ▲ @answer.VoteCount
                            </button>
                        </form>

                        @if (User.Identity.Name == answer.UserId || User.IsInRole("Admin"))
                        {
                            <form asp-controller="Answer" asp-action="Delete" asp-route-id="@answer.Id"
                                  asp-route-questionId="@Model.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Delete this answer?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        }
                    }
                    else
                    {
                        <span class="badge bg-secondary">@answer.VoteCount votes</span>
                    }
                </div>
            </div>
        </div>
    </div>
}

@if (User.Identity.IsAuthenticated)
{
    <div class="card mt-4">
        <div class="card-body">
            <h5>Your Answer</h5>
            <form asp-controller="Answer" asp-action="Create" method="post">
                <input type="hidden" name="QuestionId" value="@Model.Id" />
                <div class="form-group mb-3">
                    <textarea name="Content" class="form-control" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post Answer</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        Please <a asp-controller="Account" asp-action="Login">login</a> to post an answer.
    </div>
}